<?xml version="1.0" encoding="utf-8"?>
<Application
    x:Class="Syncify.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Syncify">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls" />
                <!-- Other merged dictionaries here -->
            </ResourceDictionary.MergedDictionaries>
            <ResourceDictionary.ThemeDictionaries>
                <ResourceDictionary
                    x:Key="Light">
                    <SolidColorBrush
                        x:Key="HomePageBackgroundBrush"
                        Color="Transparent" />
                    <SolidColorBrush
                        x:Key="MicaDarkBrush"
                        Color="#F3F3F3" />
                </ResourceDictionary>
                <ResourceDictionary
                    x:Key="Dark">
                    <SolidColorBrush
                        x:Key="HomePageBackgroundBrush"
                        Color="Black" />
                    <SolidColorBrush
                        x:Key="MicaDarkBrush"
                        Color="#202020" />
                </ResourceDictionary>
            </ResourceDictionary.ThemeDictionaries>
            <!-- Other app resources here -->

            <CubicEase
                x:Key="CubicEaseOut"
                EasingMode="EaseOut" />
        </ResourceDictionary>

    </Application.Resources>
</Application>
