<Page
    x:Class="Syncify.AboutPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:Microsoft.UI.Xaml.Controls">

    <ScrollViewer>
        <StackPanel
            Padding="36 10 16 30"
            Spacing="12">

            <!-- Header -->
            <TextBlock
                Text="About Syncify"
                FontSize="28"
                FontWeight="SemiBold" />

            <!-- Version -->
            <StackPanel
                Orientation="Horizontal"
                VerticalAlignment="Center">
                <TextBlock
                    FontWeight="SemiBold"
                    Text="Version: "
                    FontSize="16" />
                <TextBlock
                    Text="0.0.1.4"
                    Margin="6,0"
                    FontSize="16" />
            </StackPanel>

            <!-- Developer -->
            <StackPanel
                Orientation="Horizontal"
                VerticalAlignment="Center">
                <TextBlock
                    FontWeight="SemiBold"
                    Text="Developer: "
                    FontSize="16" />
                <TextBlock
                    Text="Deepanshu Pal"
                    Margin="6,0"
                    FontSize="16" />
            </StackPanel>

            <!-- Description -->
            <TextBlock
                Text="Description"
                FontWeight="Bold"
                FontSize="18"
                Margin="0,16,0,0" />
            <TextBlock
                FontSize="14"
                TextWrapping="Wrap">
                Syncify is a lightweight audio routing utility that allows you to stream sound to multiple output devices simultaneously with per-device volume controls. Built with simplicity and performance in mind, it's ideal for both everyday users and audio enthusiasts.
            </TextBlock>

            <!-- Key Features -->
            <TextBlock
                Text="Key Features"
                FontWeight="Bold"
                FontSize="18"
                Margin="0,16,0,0" />
            <StackPanel>
                <StackPanel
                    Orientation="Horizontal">
                    <FontIcon
                        Glyph="&#xE915;"
                        FontSize="16"
                        Margin="0,0,6,0" />
                    <TextBlock
                        Text="Stream audio to multiple output devices"
                        FontSize="14" />
                </StackPanel>
                <StackPanel
                    Orientation="Horizontal">
                    <FontIcon
                        Glyph="&#xE915;"
                        FontSize="16"
                        Margin="0,0,6,0" />
                    <TextBlock
                        Text="Individually adjust volume per device"
                        FontSize="14" />
                </StackPanel>
                <StackPanel
                    Orientation="Horizontal">
                    <FontIcon
                        Glyph="&#xE915;"
                        FontSize="16"
                        Margin="0,0,6,0" />
                    <TextBlock
                        Text="Real-time detection of device changes"
                        FontSize="14" />
                </StackPanel>
                <StackPanel
                    Orientation="Horizontal">
                    <FontIcon
                        Glyph="&#xE915;"
                        FontSize="16"
                        Margin="0,0,6,0" />
                    <TextBlock
                        Text="Custom themes and navigation styles"
                        FontSize="14" />
                </StackPanel>
                <StackPanel
                    Orientation="Horizontal">
                    <FontIcon
                        Glyph="&#xE915;"
                        FontSize="16"
                        Margin="0,0,6,0" />
                    <TextBlock
                        Text="Icon-enhanced device list for quick identification"
                        FontSize="14" />
                </StackPanel>
            </StackPanel>

            <!-- Powered By -->
            <TextBlock
                Text="Powered By"
                FontWeight="Bold"
                FontSize="18"
                Margin="0,0,0,16" />
            <StackPanel>
                <StackPanel
                    Orientation="Horizontal">
                    <FontIcon
                        Glyph="&#xE915;"
                        FontSize="16"
                        Margin="0,0,6,0" />
                    <TextBlock
                        Text=".NET 6 / WinUI 3"
                        FontSize="14" />
                </StackPanel>
                <StackPanel
                    Orientation="Horizontal">
                    <FontIcon
                        Glyph="&#xE915;"
                        FontSize="16"
                        Margin="0,0,6,0" />
                    <TextBlock
                        Text="NAudio Library"
                        FontSize="14" />
                </StackPanel>
            </StackPanel>

            <!-- Changelog -->
            <controls:Expander
                Header="Changelog"
                IsExpanded="False"
                HorizontalContentAlignment="Left"
                HorizontalAlignment="Stretch">
                <StackPanel
                    HorizontalAlignment="Left">
                    <StackPanel
                        HorizontalAlignment="Left"
                        Padding="6,4,0,4"
                        Spacing="6">
                        <TextBlock
                            FontWeight="SemiBold"
                            HorizontalAlignment="Left"
                            Text="v0.0.1.4 (unreleased)"
                            FontSize="14" />
                        <TextBlock
                            FontWeight="Medium"
                            Text="Changed:"
                            FontSize="13"
                            Margin="6,0,0,0" />
                        <StackPanel
                            HorizontalAlignment="Left"
                            Orientation="Horizontal"
                            Margin="12,0,0,0">
                            <FontIcon
                                Glyph="&#xE9AE;"
                                FontSize="16" />
                            <TextBlock
                                FontSize="14"
                                TextWrapping="Wrap"
                                Text="Made self contained app and fixed minor issues." />
                        </StackPanel>
                        <TextBlock
                            FontWeight="SemiBold"
                            HorizontalAlignment="Left"
                            Text="v0.0.1.3 (unreleased)"
                            FontSize="14" />
                        <TextBlock
                            FontWeight="Medium"
                            Text="Added:"
                            FontSize="13"
                            Margin="6,0,0,0" />
                        <StackPanel
                            HorizontalAlignment="Left"
                            Orientation="Horizontal"
                            Margin="12,0,0,0">
                            <FontIcon
                                Glyph="&#xE9AE;"
                                FontSize="16" />
                            <TextBlock
                                FontSize="14"
                                TextWrapping="Wrap"
                                Text="Close to system tray option in settings" />
                        </StackPanel>
                        <StackPanel
                            Orientation="Horizontal"
                            Margin="12,0,0,0">
                            <FontIcon
                                Glyph="&#xE9AE;"
                                FontSize="16" />
                            <TextBlock
                                FontSize="14"
                                TextWrapping="Wrap"
                                Text="Close to tray functionality" />
                        </StackPanel>
                        <StackPanel
                            Orientation="Horizontal"
                            Margin="12,0,0,0">
                            <FontIcon
                                Glyph="&#xE9AE;"
                                FontSize="16" />
                            <TextBlock
                                FontSize="14"
                                TextWrapping="Wrap"
                                Text="Single instance application mode" />
                        </StackPanel>
                        <TextBlock
                            FontWeight="Medium"
                            Text="Changed:"
                            FontSize="13"
                            Margin="6,0,0,0" />
                        <StackPanel
                            Orientation="Horizontal"
                            Margin="12,0,0,0">
                            <FontIcon
                                Glyph="&#xE9AE;"
                                FontSize="16" />
                            <TextBlock
                                FontSize="14"
                                TextWrapping="Wrap"
                                Text="Updated About page" />
                        </StackPanel>

                        <TextBlock
                            FontWeight="SemiBold"
                            HorizontalAlignment="Left"
                            Text="v0.0.1.2 (unreleased)"
                            FontSize="14"
                            Margin="0,10,0,0" />
                        <TextBlock
                            FontWeight="Medium"
                            Text="Added:"
                            FontSize="13"
                            Margin="6,0,0,0" />
                        <StackPanel
                            HorizontalAlignment="Left"
                            Orientation="Horizontal"
                            Margin="12,0,0,0">
                            <FontIcon
                                Glyph="&#xE9AE;"
                                FontSize="16" />
                            <TextBlock
                                FontSize="14"
                                TextWrapping="Wrap"
                                Text="Side navigation bar" />
                        </StackPanel>
                        <StackPanel
                            Orientation="Horizontal"
                            Margin="12,0,0,0">
                            <FontIcon
                                Glyph="&#xE9AE;"
                                FontSize="16" />
                            <TextBlock
                                FontSize="14"
                                TextWrapping="Wrap"
                                Text="Support for themes and navigation styles" />
                        </StackPanel>
                        <StackPanel
                            Orientation="Horizontal"
                            Margin="12,0,0,0">
                            <FontIcon
                                Glyph="&#xE9AE;"
                                FontSize="16" />
                            <TextBlock
                                FontSize="14"
                                TextWrapping="Wrap"
                                Text="Icons for audio devices" />
                        </StackPanel>
                        <TextBlock
                            FontWeight="Medium"
                            Text="Changed:"
                            FontSize="13"
                            Margin="6,0,0,0" />
                        <StackPanel
                            Orientation="Horizontal"
                            Margin="12,0,0,0">
                            <FontIcon
                                Glyph="&#xE9AE;"
                                FontSize="16" />
                            <TextBlock
                                FontSize="14"
                                TextWrapping="Wrap"
                                Text="Redesigned UI" />
                        </StackPanel>

                        <TextBlock
                            FontWeight="SemiBold"
                            Text="v0.0.1.1 (unreleased)"
                            FontSize="14"
                            Margin="0,10,0,0" />
                        <TextBlock
                            FontWeight="Medium"
                            Text="Added:"
                            FontSize="13"
                            Margin="6,0,0,0" />
                        <StackPanel
                            Orientation="Horizontal"
                            Margin="12,0,0,0">
                            <FontIcon
                                Glyph="&#xE9AE;"
                                FontSize="16" />
                            <TextBlock
                                FontSize="14"
                                TextWrapping="Wrap"
                                Text="Synchronized system volume changes to device sliders" />
                        </StackPanel>

                        <TextBlock
                            FontWeight="SemiBold"
                            Text="v0.0.1.0 (unreleased)"
                            FontSize="14"
                            Margin="0,10,0,0" />
                        <TextBlock
                            FontWeight="Medium"
                            Text="Added:"
                            FontSize="13"
                            Margin="6,0,0,0" />
                        <StackPanel
                            Orientation="Horizontal"
                            Margin="12,0,0,0">
                            <FontIcon
                                Glyph="&#xE9AE;"
                                FontSize="16" />
                            <TextBlock
                                FontSize="14"
                                TextWrapping="Wrap"
                                Text="Graceful handling when default audio device changes" />
                        </StackPanel>
                        <StackPanel
                            Orientation="Horizontal"
                            Margin="12,0,0,0">
                            <FontIcon
                                Glyph="&#xE9AE;"
                                FontSize="16" />
                            <TextBlock
                                FontSize="14"
                                TextWrapping="Wrap"
                                Text="Individual device volume sliders" />
                        </StackPanel>
                        <StackPanel
                            Orientation="Horizontal"
                            Margin="12,0,0,0">
                            <FontIcon
                                Glyph="&#xE9AE;"
                                FontSize="16" />
                            <TextBlock
                                FontSize="14"
                                TextWrapping="Wrap"
                                Text="Circular buffer for smoother audio playback" />
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
            </controls:Expander>

            <!-- Known Issues -->
            <controls:Expander
                Header="Known Issues"
                HorizontalContentAlignment="Left"
                IsExpanded="False"
                HorizontalAlignment="Stretch">

                <StackPanel
                    Padding="6,4,0,4"
                    Spacing="6">
                    <StackPanel
                        Orientation="Horizontal">
                        <FontIcon
                            Glyph="&#xE9AE;"
                            FontSize="16" />
                        <TextBlock
                            FontSize="14"
                            TextWrapping="Wrap"
                            Text="Audio latency (~100-150ms) occurs when streaming from wireless to wired devices (recommend wired-to-wireless configuration)." />
                    </StackPanel>

                    <StackPanel
                        Orientation="Horizontal">
                        <FontIcon
                            Glyph="&#xE9AE;"
                            FontSize="16" />
                        <TextBlock
                            FontSize="14"
                            TextWrapping="Wrap"
                            Text="No in-app control for setting the system default output device (must be changed via Windows settings)." />
                    </StackPanel>
                </StackPanel>
            </controls:Expander>
            <!-- License -->
            <TextBlock
                Text="License"
                FontWeight="Bold"
                FontSize="18"
                Margin="0,16,0,0" />
            <TextBlock
                FontSize="14"
                TextWrapping="Wrap">
                Syncify is open-source and distributed under the MIT License. You may use, modify, and redistribute it in compliance with the license.
            </TextBlock>

            <!-- Contact -->
            <TextBlock
                Text="Contact"
                FontWeight="Bold"
                FontSize="18"
                Margin="0,16,0,0" />
            <TextBlock
                FontSize="14"
                TextWrapping="Wrap">
                For support, feature requests, or contributions, visit:
            </TextBlock>
            <HyperlinkButton
                Content="github.com/deepanshupal09/Syncify"
                NavigateUri="https://github.com/deepanshupal09/Syncify"
                FontSize="14"
                Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"
                BorderThickness="0"
                Padding="0"
                HorizontalAlignment="Left" />

        </StackPanel>
    </ScrollViewer>
</Page>
