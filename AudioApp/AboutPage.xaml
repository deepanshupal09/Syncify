<Page
    x:Class="AudioApp.AboutPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">


    <StackPanel
        Padding="36 10 16 30"
        Spacing="8">
        <TextBlock
            Text="About"
            Margin="0,8,0,10"
            FontSize="30"
            FontWeight="SemiBold" />
        <StackPanel
            Orientation="Horizontal"
            VerticalAlignment="Center">
            <TextBlock
                FontWeight="SemiBold"
                Text="Version: "
                FontSize="16" />
            <TextBlock
                Margin="8,0,0,0"
                Text="0.0.1.2"
                FontSize="16" />
        </StackPanel>
        <StackPanel
            Orientation="Horizontal"
            VerticalAlignment="Center">
            <TextBlock
                FontWeight="SemiBold"
                Text="Contributer: "
                FontSize="16" />
            <TextBlock
                Margin="8,0,0,0"
                Text="Deepanshu Pal"
                FontSize="16" />
        </StackPanel>

    </StackPanel>
</Page>
