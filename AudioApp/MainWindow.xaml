<Window
    x:Class="AudioApp.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:AudioApp"
    Title="AudioApp">

    <Grid x:Name="RootGrid" Padding="20">
        <StackPanel VerticalAlignment="Top" Spacing="10">
            <TextBlock Text="Select Outputs:" FontSize="16"/>

            <ListView ItemsSource="{Binding DeviceService.RenderDevices}"
                     Height="300">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal" Spacing="20">
                            <CheckBox
                                Content="{Binding FriendlyName}"
                                Tag="{Binding ID}"
                                IsEnabled="{Binding CanSelect}"
                                IsChecked="{Binding IsSelected, Mode=TwoWay}"
                                Checked="Device_Checked"
                                Unchecked="Device_Unchecked"/>

                            <Slider
                            Tag="{Binding ID}"
                            Width="150"
                            Minimum="0" Maximum="100"
                            Value="{Binding Volume, Mode=TwoWay}"
                            />
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <StackPanel Orientation="Horizontal"
                      HorizontalAlignment="Center"
                      Spacing="20">
                <Button Content="Start" Width="80" Click="StartButton_Click"
                       />
                <Button Content="Stop" Width="80" Click="StopButton_Click"
                       />
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>