<Window
    x:Class="AudioApp.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    xmlns:local="using:AudioApp"
    Title="Audio App">

    <Grid x:Name="RootGrid"
          Loaded="RootGrid_Loaded"
        Background="Transparent">

        <!-- Row 0: title bar -->
        <Grid.RowDefinitions>
            <RowDefinition
                Height="40" />
            <!-- system caption height -->
            <RowDefinition
                Height="*" />
        </Grid.RowDefinitions>

        <!-- your custom title bar area -->
        <Grid
            x:Name="TitleBarArea"
            Grid.Row="0"
            Background="Transparent">
            <TextBlock
                Text="AudioApp"
                FontSize="12"
                VerticalAlignment="Center"
                Margin="12,0,0,0"
                Foreground="{ThemeResource TextFillColorPrimaryBrush}" />
        </Grid>

        <!-- Row 1: your existing NavigationView -->
        <muxc:NavigationView
            Grid.Row="1"
            x:Name="NavView"
            IsBackButtonVisible="Collapsed"
            SelectionChanged="NavView_SelectionChanged"
            IsTitleBarAutoPaddingEnabled="True"
            BorderBrush="Transparent"
            BorderThickness="0"
            IsSettingsVisible="True"
            Background="Transparent"
            AlwaysShowHeader="False">
            <muxc:NavigationView.Resources>
                <!-- content area -->
                <SolidColorBrush
                    x:Key="NavigationViewContentBackground"
                    Color="Transparent" />
                <!-- the pane itself -->
                <SolidColorBrush
                    x:Key="NavigationViewPaneBackground"
                    Color="Transparent" />
                <!-- any header background -->
                <SolidColorBrush
                    x:Key="NavigationViewPaneHeaderBackground"
                    Color="Transparent" />
                <!-- the top border/shadow under the header -->
                <SolidColorBrush
                    x:Key="NavigationViewPaneBorderBrush"
                    Color="Transparent" />
            </muxc:NavigationView.Resources>

            <!-- top-level menu -->
            <muxc:NavigationView.MenuItems>
                <muxc:NavigationViewItem
                    Content="General"
                    Icon="Setting"
                    Tag="general" />
                <muxc:NavigationViewItem
                    Content="About"
                    Icon="ContactInfo"
                    Tag="about" />
            </muxc:NavigationView.MenuItems>

            <!-- the host for our pages -->
            <Frame
                x:Name="ContentFrame" />

        </muxc:NavigationView>
    </Grid>
</Window>
