<Window
    x:Class="AudioApp.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:AudioApp"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    xmlns:services="using:AudioApp.Services"
    Title="Audio App Settings">

    <!-- 1) Mica for the client area -->
    <Window.SystemBackdrop>
        <MicaBackdrop
            Kind="Base" />
    </Window.SystemBackdrop>

    <!-- 2) Main layout: header + content -->
    <Grid
        x:Name="RootGrid"
        Loaded="RootGrid_Loaded"
        Padding="16"
        RowDefinitions="Auto,*">

        <!-- Header -->
        <TextBlock
            Grid.Row="0"
            Text="Audio App Settings"
            FontSize="12"
            Foreground="{ThemeResource TextFillColorPrimaryBrush}"
            Margin="0,0,0,12" />

        <!-- Full-width ListView -->
        <muxc:ListView
            Grid.Row="1"
            ItemsSource="{x:Bind DeviceService.RenderDevices}"
            SelectionMode="Single"
            BorderThickness="0"
            HorizontalAlignment="Stretch"
            HorizontalContentAlignment="Stretch">

            <!-- override every hover/press/select brush to Transparent -->
            <muxc:ListView.Resources>
                <!-- Pointer Over -->
                <SolidColorBrush
                    x:Key="ListViewItemBackgroundPointerOver"
                    Color="Transparent" />
                <SolidColorBrush
                    x:Key="ListViewItemBorderBrushPointerOver"
                    Color="Transparent" />

                <!-- Selected -->
                <SolidColorBrush
                    x:Key="ListViewItemBackgroundSelected"
                    Color="Transparent" />
                <SolidColorBrush
                    x:Key="ListViewItemBorderBrushSelected"
                    Color="Transparent" />

                <!-- Selected + Pointer Over -->
                <SolidColorBrush
                    x:Key="ListViewItemBackgroundSelectedPointerOver"
                    Color="Transparent" />
                <SolidColorBrush
                    x:Key="ListViewItemBorderBrushSelectedPointerOver"
                    Color="Transparent" />

                <!-- Pressed -->
                <SolidColorBrush
                    x:Key="ListViewItemBackgroundPressed"
                    Color="Transparent" />
                <SolidColorBrush
                    x:Key="ListViewItemBorderBrushPressed"
                    Color="Transparent" />

                <!-- Pressed + Selected -->
                <SolidColorBrush
                    x:Key="ListViewItemBackgroundPressedSelected"
                    Color="Transparent" />
                <SolidColorBrush
                    x:Key="ListViewItemBorderBrushPressedSelected"
                    Color="Transparent" />
            </muxc:ListView.Resources>

            <!-- Make each item fill horizontally -->
            <muxc:ListView.ItemContainerStyle>
                <Style
                    TargetType="muxc:ListViewItem">
                    <Setter
                        Property="HorizontalContentAlignment"
                        Value="Stretch" />
                    <Setter
                        Property="Margin"
                        Value="0" />
                    <Setter
                        Property="Padding"
                        Value="2,2,0,0" />
                    <Setter
                        Property="CornerRadius"
                        Value="8" />

                </Style>
            </muxc:ListView.ItemContainerStyle>

            <!-- Device card template -->
            <muxc:ListView.ItemTemplate>

                <DataTemplate
                    x:DataType="services:DeviceView">
                    <Border
                        CornerRadius="8"
                        Padding="12"
                        Background="{ThemeResource LayerOnMicaBaseAltFillColorSecondaryBrush}"
                        Margin="0,4"
                        HorizontalAlignment="Stretch">

                        <Grid
                            RowDefinitions="Auto,Auto"
                            ColumnDefinitions="Auto,Auto,*"
                            ColumnSpacing="12">
                            <!-- Row0: checkbox, icon, name+badge -->
                            <CheckBox
                                Grid.Row="0"
                                Grid.Column="0"
                                VerticalAlignment="Center"
                                MinWidth="0"
                                Width="24"
                                Padding="0"
                                Tag="{Binding ID}"
                                IsEnabled="{Binding CanSelect}"
                                IsChecked="{Binding IsSelected, Mode=TwoWay}"
                                Checked="Device_Checked"
                                Unchecked="Device_Unchecked" />

                            <SymbolIcon
                                Grid.Row="0"
                                Grid.Column="1"
                                Symbol="Audio"
                                Width="20"
                                Height="20"
                                VerticalAlignment="Center" />

                            <StackPanel
                                Grid.Row="0"
                                Grid.Column="2"
                                Orientation="Horizontal"
                                VerticalAlignment="Center"
                                Spacing="8">
                                <TextBlock
                                    Text="{x:Bind FriendlyName}"
                                    FontSize="16"
                                    FontWeight="SemiBold"
                                    Foreground="{ThemeResource SystemControlForegroundBaseHighBrush}" />
                                <Border
                                    Background="{ThemeResource SystemControlBackgroundAccentBrush}"
                                    CornerRadius="2"
                                    Padding="4,2"
                                    Visibility="{x:Bind IsDefaultDevice}">
                                    <TextBlock
                                        Text="Default"
                                        FontSize="12"
                                        Foreground="{ThemeResource SystemControlForegroundAltHighBrush}" />
                                </Border>
                            </StackPanel>

                            <!-- Row1: slider -->
                            <Slider
                                Grid.Row="1"
                                Grid.Column="2"
                                HorizontalAlignment="Left"
                                Minimum="0"
                                Maximum="100"
                                Value="{x:Bind Volume, Mode=TwoWay}"
                                Width="200"
                                Margin="0,8,0,0"
                                Foreground="{ThemeResource SystemControlHighlightAccentBrush}" />
                        </Grid>
                    </Border>
                </DataTemplate>
            </muxc:ListView.ItemTemplate>
        </muxc:ListView>
    </Grid>
</Window>
